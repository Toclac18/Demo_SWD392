@model Demo_SWD392_Coding.Models.MedicalRecord

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Medical Record</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">

    <div class="bg-white p-6 rounded-lg shadow-md w-full max-w-md">
        <h2 class="text-2xl font-semibold text-gray-700 text-center">Create Medical Record</h2>
        <hr class="my-4">

        <form asp-action="Create" class="space-y-4">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

            <div>
                <label asp-for="RecordCode" class="block text-gray-700 font-medium"></label>
                <input asp-for="RecordCode" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="RecordCode" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="PatientCode" class="block text-gray-700 font-medium"></label>
                <select asp-for="PatientCode" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" asp-items="ViewBag.PatientCode"></select>
            </div>

            <div class="flex justify-between items-center">
                <a asp-action="Index" class="text-blue-500 hover:underline">Back to List</a>
                <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition">Create</button>
            </div>
        </form>
    </div>

</body>
</html>
