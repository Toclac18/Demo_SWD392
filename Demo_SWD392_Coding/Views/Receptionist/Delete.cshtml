@model Demo_SWD392_Coding.Models.MedicalRecord

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Delete Medical Record</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">

    <div class="bg-white p-6 rounded-lg shadow-md w-full max-w-2xl">
        <h2 class="text-2xl font-semibold text-red-600 text-center mb-4">Are you sure you want to delete this?</h2>
        
        <div class="border-t border-gray-300 pt-4">
            <div class="grid grid-cols-2 gap-4">
                <div class="font-semibold text-gray-600">Created At:</div>
                <div class="text-gray-800">@Html.DisplayFor(model => model.CreatedAt)</div>

                <div class="font-semibold text-gray-600">Patient Code:</div>
                <div class="text-gray-800">@Html.DisplayFor(model => model.PatientCodeNavigation.PatientCode)</div>
            </div>
        </div>

        <form asp-action="Delete" class="mt-6 flex justify-between">
            <input type="hidden" asp-for="RecordCode" />
            <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition">
                Delete
            </button>
            <a asp-action="Index" class="text-gray-600 hover:text-gray-800">Back to List</a>
        </form>
    </div>

</body>
</html>
